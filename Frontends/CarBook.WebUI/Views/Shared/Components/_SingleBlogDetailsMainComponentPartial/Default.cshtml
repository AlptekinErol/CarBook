@model ResultBlogByIdDto
<div class="col-md-8 ftco-animate">

    <h2 class="mb-3">@Model.Title</h2>
    <p>
        @Model.Description
    </p>
    <p>
        <img src="/ThemeFiles/images/image_7.jpg" alt="" class="img-fluid">
    </p>
    @await Component.InvokeAsync("_SingleBlogDetailMainCloudTagByBlogComponentPartial")

    @await Component.InvokeAsync("_SingleBlogDetailsMainAuthorAboutComponentPartial")

    <div class="pt-5 mt-5">
        <h3 class="mb-5">6 Yorum</h3>
        @await Component.InvokeAsync("_CommentListByBlogComponentPartial")

        @await Component.InvokeAsync("_LeaveCommentComponentPartial")
    </div>

</div>