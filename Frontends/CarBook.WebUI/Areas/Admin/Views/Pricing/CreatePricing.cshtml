@model string

@{
    ViewData["Title"] = "Yeni Ödeme Periyodu Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Ödeme Periyodu Ekle</h4>
                        <p class="card-subtitle mb-4">
                            Ödeme periyodu bilgilerini aşağıdaki form aracılığıyla ekleyebilirsiniz.
                        </p>

                        <form method="post" asp-action="CreatePricing" asp-controller="Pricing" asp-area="Admin">
                            <div class="form-group">
                                <label for="pricingName">Ödeme Periyot Adı</label>
                                <input type="text"
                                       class="form-control"
                                       id="pricingName"
                                       name="name"
                                       placeholder="Ödeme Periyot Adını Giriniz (Günlük, Haftalık, Aylık vs.)"
                                       required>
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                Ödeme Periyot Bilgisini Kaydet
                            </button>
                            <a asp-action="Index" asp-controller="CreatePricing" asp-area="Admin" class="btn btn-outline-secondary ml-2">
                                Geri Dön
                            </a>
                        </form>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
